@model IntelliPrestamos.Models.Inversion
<!-- Modal -->
<div class="modal fade" id="modalDetail" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">Aplicar Ganancias</h4>
            </div>
            <div class="modal-body">
                <form id="AddConfigUpdate">
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label class="control-label"></label>
                                    @Html.HiddenFor(m => m.Cedula, new { @id = "Cedula" })
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label class="control-label" style="font-weight:bold;">Balance Ganancias:</label>
                                    <span style="font-weight:bold;">@Model.Monto_Ganancia</span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label class="control-label" style="font-weight:bold;">Monto Ganancia Aplicar:</label>
                                    <input type="number" class="form-control" value="0" name="Monto_Ganancia" id="Monto_Ganancia">
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <div class="form-group">
                                        <label class="control-label" style="font-weight:bold;">Tipo Acción:</label>
                                        @Html.DropDownListFor(m => m.tipo_trans, new List<SelectListItem>
                                                                             {
                                                                                new SelectListItem{ Text="Retirar", Value = "1" },
                                                                                new SelectListItem{ Text="Invertir", Value = "0" }
                                                                             }, new { @class = "form-control", @id = "tipo_trans" })
                                    </div>
                                </div>
                            </div>
                        </div>
                       

                    </div>
                    <input type="hidden" value="@ViewBag.Id" id="id" name="id" />
                </form>
            </div>
            <div class="modal-footer">
                <span id="spnModalConfigInformation" style="color:red;"></span>
                <button type="button" class="btn btn-default" data-dismiss="modal" onclick="location.href='@Url.Action("Manage", "Accionistas")'">Cerrar</button>
                <button type="button" class="btn btn-primary" id="btnSaveModify" onclick="saveModalConfig(this, 'spnModalConfigInformation');" data-url="@(Url.Action("Modify", "Accionistas"))">Guardar</button>
            </div>
        </div>
    </div>
</div>


