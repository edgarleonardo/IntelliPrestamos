@model IEnumerable<IntelliPrestamos.Models.Empleado>
<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th style="width:4ex"></th>
                <th>Cedula</th>
                <th>Nombre</th>
                <th>Apellidos</th>
                <th>Fecha Ingreso</th>
                <th>Fecha Salida</th>
                <th class="text-right">Acción</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <a onclick="showModalConfig(this,  '@(item.Cedula)', '_Get');" style="cursor: pointer; color: #337ab7;" data-url="@(Url.Action("Get", "Users"))">Visualizar</a>
                    </td>
                    <td>@Html.DisplayFor(modelItem => item.Cedula)</td>
                    <td>@Html.DisplayFor(modelItem => item.Nombre)</td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Apellidos)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Fecha_Ingreso)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Fecha_Salida)
                    </td>
                    <td class="text-right">
                        <a class="btn btn-xs btn-default add-tooltip" data-toggle="tooltip" onclick="window.open('@Url.Action("User", "Users", new { Cedula = @item.Cedula })','_blank');">
                            @*onclick="showModalConfig(this, '@(item.Cedula)','_Add');" data-original-title="Editar" data-container="body" data-url="@(Url.Action("Get", "Users"))">*@<i class="fa fa-pencil"></i>
                        </a>
                        @*<a class="btn btn-xs btn-danger add-tooltip" data-toggle="tooltip" onclick="showModalConfig(this,  '@(item.Cedula)', '_Delete');" data-original-title="Eliminar" data-container="body" data-url="@(Url.Action("Get", "Users"))"><i class="fa fa-times"></i></a>*@
                    </td>
                </tr>
            }

        </tbody>
    </table>
</div>

<script type="text/javascript">
    $(function () {
        $('.table').DataTable({
            "language": {
                "lengthMenu": "Mostrar _MENU_ Registros por Página",
                "zeroRecords": "No se encontraron coincidencias",
                "info": "Mostrando Página _PAGE_ de _PAGES_",
                "infoEmpty": "",
                "search": "Buscar:",
                "infoFiltered": "(filtered from _MAX_ total records)",
                "paginate": {
                    "first": "Primero",
                    "last": "Último",
                    "next": "Próximo",
                    "previous": "Anterior"
                }
            }
        });
    });
</script>
