
@model IEnumerable<IntelliPrestamos.Models.Transaction>
<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th style="width:4ex"></th>
                <th>Trans ID</th>
                <th>Nombre</th>
                <th>Afecta Pago y Capital</th>
                <th>Afecta Capital</th>
                @*<th class="text-right">Acción</th>*@
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <a onclick="showModalConfig(this,  '@(item.Tipo_Transaccion_Id)', '_Get');" style="cursor: pointer; color: #337ab7;" data-url="@(Url.Action("Get", "Transaction"))">Visualizar</a>
                    </td>
                    <td>@Html.DisplayFor(modelItem => item.Tipo_Transaccion_Id)</td>
                    <td>@Html.DisplayFor(modelItem => item.Tipo_Transaccion_Desc)</td>
                    <td>
                        @if (item.Tipo_Pago_Capital != null && item.Tipo_Pago_Capital == 1)
                        {
                            <span>Si</span>
                        }
                        else
                        {
                            <span>No</span>
                        }
                    </td>
                    <td>
                        @if (item.Tipo_Capital != null && item.Tipo_Capital == 1)
                        {
                            <span>Si</span>
                        }
                        else
                        {
                            <span>No</span>
                        }
                    </td>
                    
                    @*<td class="text-right">
                        <a class="btn btn-xs btn-default add-tooltip" data-toggle="tooltip" onclick="showModalConfig(this, '@(item.Tipo_Transaccion_Id)','_Add');" data-original-title="Editar" data-container="body" data-url="@(Url.Action("Get", "Transaction"))"><i class="fa fa-pencil"></i></a>
                        <a class="btn btn-xs btn-danger add-tooltip" data-toggle="tooltip" onclick="showModalConfig(this,  '@(item.Tipo_Transaccion_Id)', '_Delete');" data-original-title="Eliminar" data-container="body" data-url="@(Url.Action("Get", "Transaction"))"><i class="fa fa-times"></i></a>
                    </td>*@
                </tr>
            }

        </tbody>
    </table>
</div>

<script type="text/javascript">
    $(function () {
        $('.table').DataTable({
            "language": {
                "lengthMenu": "Mostrar _MENU_ Registros por Página",
                "zeroRecords": "No se encontraron coincidencias",
                "info": "Mostrando Página _PAGE_ de _PAGES_",
                "infoEmpty": "",
                "search": "Buscar:",
                "infoFiltered": "(filtered from _MAX_ total records)",
                "paginate": {
                    "first": "Primero",
                    "last": "Último",
                    "next": "Próximo",
                    "previous": "Anterior"
                }
            }
        });
    });
</script>
