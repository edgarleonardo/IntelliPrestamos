
@model IntelliPrestamos.Models.Periodicidad
<!-- Modal -->
<div class="modal fade" id="modalDetail" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">Crear/Editar</h4>
            </div>
            <div class="modal-body">
                <form id="AddConfigUpdate">

                    <div class="panel-body">
                        <div class="row">
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label class="control-label"></label>
                                    @Html.HiddenFor(m => m.Periodicidad_Id, new { @id = "Periodicidad_Id" })
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="form-group">

                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label class="control-label" style="font-weight:bold;">Periodicidad:</label>
                                    @Html.TextBoxFor(m => m.Periodicidad_Desc, new { @class = "form-control", @id = "Periodicidad_Desc", @disabled = "true" })
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <div class="form-group">
                                        <label class="control-label" style="font-weight:bold;">Descripción:</label>
                                        @Html.TextAreaFor(m => m.Periodicidad_Info, new { @class = "form-control", @id = "Periodicidad_Info", @disabled = "true" })
                                    </div>
                                </div>
                            </div>
                        </div>

                        

                    </div>
                    <input type="hidden" value="@ViewBag.Id" id="id" name="id" />
                </form>
            </div>
            <div class="modal-footer">
                <span id="spnModalConfigInformation" style="color:red;"></span>
                <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>

            </div>
        </div>
    </div>
</div>