@model IntelliPrestamos.Models.Prestamos
<!-- Modal -->
<div class="modal fade" id="modalDetail" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">Eliminar</h4>
            </div>
            <div class="modal-body">
                <form id="AddConfigUpdate">
                    @Html.AntiForgeryToken()
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label class="control-label"></label>
                                    @Html.HiddenFor(m => m.Prestamo_Id, new { @id = "Prestamo_Id" })
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="form-group">

                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label class="control-label" style="font-weight:bold;"># Solicitud:</label>
                                    @Html.TextBoxFor(m => m.Id_Solicitud, new { @class = "form-control", @id = "Id_Solicitud", @disabled = "true" })
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <div class="form-group">
                                        <label class="control-label" style="font-weight:bold;">Cedula:</label>
                                        @Html.TextBoxFor(m => m.Cedula, new { @class = "form-control", @id = "Cedula", @disabled = "true" })
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label class="control-label" style="font-weight:bold;">Monto Aprobado:</label>
                                    @Html.TextBoxFor(m => m.Monto_Aprobado, new { @class = "form-control", @id = "Monto_Aprobado", @disabled = "true" })
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <div class="form-group">
                                        <label class="control-label" style="font-weight:bold;">Periodicidad:</label>
                                       @Html.TextBoxFor(m => m.Periodicidad_Desc, new { @class = "form-control", @id = "Periodicidad_Desc", @disabled = "true" })
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label class="control-label" style="font-weight:bold;">Balance General:</label>
                                    @Html.TextBoxFor(m => m.Balance_General, new { @class = "form-control", @id = "Balance_General", @disabled = "true" })
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <div class="form-group">
                                        <label class="control-label" style="font-weight:bold;">Intereses Generados:</label>
                                        @Html.TextBoxFor(m => m.Intereses_Generados, new { @class = "form-control", @id = "Intereses_Generados", @disabled = "true" })
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label class="control-label" style="font-weight:bold;">Capital Pagado:</label>
                                    @Html.TextBoxFor(m => m.Capital_Pagados, new { @class = "form-control", @id = "Capital_Pagados", @disabled = "true" })
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <div class="form-group">
                                        <label class="control-label" style="font-weight:bold;">Intereses Pagados:</label>
                                        @Html.TextBoxFor(m => m.Intereses_Pagados, new { @class = "form-control", @id = "Intereses_Pagados", @disabled = "true" })
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <input type="hidden" value="@ViewBag.Id" id="id" name="id" />
                </form>
            </div>
            <div class="modal-footer">
                <span id="spnModalConfigInformation" style="color:red;"></span>
                <button type="button" class="btn btn-default" data-dismiss="modal" >Cerrar</button>
                <button type="button" class="btn btn-primary" id="btnSaveModify" onclick="saveModalConfig(this, 'spnModalConfigInformation');" data-url="@(Url.Action("Incobrable", "Pagos"))">Eliminar</button>
            </div>
        </div>
    </div>
</div>


