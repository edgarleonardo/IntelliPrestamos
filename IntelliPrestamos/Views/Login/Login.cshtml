
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login | Intelli Prestamos.</title>
    <link type="image/x-icon" href="@Url.Content(ViewBag.Url_Icon)" rel="SHORTCUT ICON" />

    <!--STYLESHEET-->
    <!--=================================================-->
    <!--Open Sans Font [ OPTIONAL ] -->
  
    <!--Bootstrap Stylesheet [ REQUIRED ]-->
    <link href="@Url.Content("~/Content/css/bootstrap.min.css")" rel="stylesheet">


    <!--Nifty Stylesheet [ REQUIRED ]-->
    <link href="@Url.Content("~/Content/css/nifty.min.css")" rel="stylesheet">


    <!--Font Awesome [ OPTIONAL ]-->
    <link href="@Url.Content("~/Content/plugins/font-awesome/css/font-awesome.min.css")" rel="stylesheet">


    <!--Demo [ DEMONSTRATION ]-->
    <link href="@Url.Content("~/Content/css/demo/nifty-demo.min.css")" rel="stylesheet">




    <!--SCRIPT-->
    <!--=================================================-->
    <!--Page Load Progress Bar [ OPTIONAL ]-->
    <link href="@Url.Content("~/Content/plugins/pace/pace.min.css")" rel="stylesheet">
    <script src="@Url.Content("~/Content/plugins/pace/pace.min.js")"></script>


</head>

<!--TIPS-->
<!--You may remove all ID or Class names which contain "demo-", they are only used for demonstration. -->

<body>
    <div id="container" class="cls-container">

        <!-- BACKGROUND IMAGE -->
        <!--===================================================-->
        <div id="bg-overlay" class="bg-img img-balloon" style="background-image: none;"></div>


        <!-- HEADER -->
        <!--===================================================-->
        <div class="cls-header cls-header-lg">
            <div class="cls-brand">
                <a class="box-inline" href="@Url.Action("Login", "Login")">
                    <span class="brand-title">Intelli <span class="text-thin">Prestamos</span></span>
                </a>
            </div>
        </div>
        <!--===================================================-->
        <!-- LOGIN FORM -->
        <!--===================================================-->
        <div class="cls-content">
            <div class="cls-content-sm panel">
                <div class="panel-body">
                    <p class="pad-btm">Login</p>
                    <form action="@Url.Action("Login", "Login")" method="post">
                       
                        <div class="form-group">
                            <div class="input-group">
                                <div class="input-group-addon"><i class="fa fa-user"></i></div>
                                <input type="text" class="form-control" placeholder="Username" name="userName">
                                <input type="hidden" name="ReturnURL"
                                       value="@System.Web.HttpContext.Current.Request["ReturnURL"]" />
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="input-group">
                                <div class="input-group-addon"><i class="fa fa-asterisk"></i></div>
                                <input type="password" class="form-control" placeholder="Password" name="password">
                            </div>
                        </div>
                        <div class="row">
                          <div class="col-xs-8 text-left checkbox">
                   <span style="color:red;">@ViewBag.Message</span>
                </div>@**@
                            <div class="col-xs-4">
                                <div class="form-group text-right">
                                    <button class="btn btn-success text-uppercase" type="submit">Login</button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>

    </div>
    <!--===================================================-->
    <!-- END OF CONTAINER -->
    <!--JAVASCRIPT-->
    <!--=================================================-->
    <!--jQuery [ REQUIRED ]-->
    <script src="@Url.Content("~/Content/js/jquery-2.1.1.min.js")"></script>


    <!--BootstrapJS [ RECOMMENDED ]-->
    <script src="@Url.Content("~/Content/js/bootstrap.min.js")"></script>


    <!--Fast Click [ OPTIONAL ]-->
    <script src="@Url.Content("~/Content/plugins/fast-click/fastclick.min.js")"></script>


    <!--Nifty Admin [ RECOMMENDED ]-->
    <script src="@Url.Content("~/Content/js/nifty.min.js")"></script>


    <!--Background Image [ DEMONSTRATION ]-->
    <script src="@Url.Content("~/Content/js/demo/bg-images.js")"></script>

</body>
</html>
