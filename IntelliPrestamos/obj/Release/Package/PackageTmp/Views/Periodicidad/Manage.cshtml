@model IEnumerable<IntelliPrestamos.Models.Periodicidad>
@{
    ViewBag.Title = "Visualización De Periodicidad En Sistema";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="panel">
    <div class="panel-heading">
        <div class="panel-control">
            <a class="fa fa-question-circle fa-lg fa-fw unselectable add-tooltip" href="#" data-original-title="<h4 class='text-thin'>Información</h4><p style='width:150px'>Este modulo muestra los diferentes tipos de periodicidades en sistema.</p>" data-html="true" title=""></a>
        </div>
        <h3 class="panel-title">Visualización De Periodicidades En Sistema</h3>
    </div>

    <div class="panel-body">
        <div class="pad-btm form-inline">
            <div class="row">
               
                <div class="col-sm-6 table-toolbar-right">
                    <div class="form-group">

                    </div>
                </div>
            </div>
        </div>
        <div id="content-ajax">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th style="width:4ex"></th>
                            <th>Periodicidad ID</th>
                            <th>Periodicidad</th>
                            
                            <th>Descripción</th>
                            
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <a onclick="showModalConfig(this,  '@(item.Periodicidad_Id)', '_Get');" style="cursor: pointer; color: #337ab7;" data-url="@(Url.Action("Get", "Bancos"))">Visualizar</a>
                                </td>
                                <td>@Html.DisplayFor(modelItem => item.Periodicidad_Id)</td>
                                <td>@Html.DisplayFor(modelItem => item.Periodicidad_Desc)</td>
                                <td>@Html.DisplayFor(modelItem => item.Periodicidad_Info)</td>

                                
                            </tr>
                        }

                    </tbody>
                </table>
            </div>

           

        </div>
        <div id="content-modal_info"></div>
    </div>
</div>
@section Header{

    <link href="@Url.Content("~/Content/plugins/datatables/media/css/dataTables.bootstrap.css")" rel="stylesheet">
}
@section scripts{

    <!--UtilitiesScripts [ Tiene las funciones especiales usadas en las vistas ]-->
    <script src="@Url.Content("~/Content/js/UtilitiesScripts.js")"></script>
<script type="text/javascript">
    $(function () {
        $('.table').DataTable({
            "language": {
                "lengthMenu": "Mostrar _MENU_ Registros por Página",
                "zeroRecords": "No se encontraron coincidencias",
                "info": "Mostrando Página _PAGE_ de _PAGES_",
                "infoEmpty": "",
                "search": "Buscar:",
                "infoFiltered": "(filtered from _MAX_ total records)",
                "paginate": {
                    "first": "Primero",
                    "last": "Último",
                    "next": "Próximo",
                    "previous": "Anterior"
                }
            }
        });
    });
</script>



}



