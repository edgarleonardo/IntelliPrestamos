@model IntelliPrestamos.Models.Roles
<!-- Modal -->
<div class="modal fade" id="modalDetail" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">Crear/Editar Registro</h4>
            </div>
            <div class="modal-body">
                <form id="AddConfigUpdate">

                    <div class="panel-body">
                        <div class="row">
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label class="control-label"></label>
                                    @Html.HiddenFor(m => m.Id_Rol, new { @id = "Id_Rol" })
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="form-group">
                                  
                                </div>
                            </div>
                        </div>
                        
                <div class="row">
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label class="control-label" style="font-weight:bold;">Nombre Rol:</label>
                            @Html.TextBoxFor(m => m.Nombre_Rol, new { @class = "form-control", @id = "Nombre_Rol" })
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group">
                            <div class="form-group">
                                <label class="control-label" style="font-weight:bold;">Descripcion:</label>
                                @Html.TextBoxFor(m => m.Descripccion, new { @class = "form-control", @id = "Descripccion" })
                            </div>
                        </div>
                    </div>
                </div>                
                <div class="row">
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label class="control-label" style="font-weight:bold;">Esta Activo:</label>
                            @Html.DropDownListFor(m => m.Activo, new List<SelectListItem>
                                                                             {
                                                                                new SelectListItem{ Text="Sí", Value = "1" },
                                                                                new SelectListItem{ Text="No", Value = "0" }
                                                                             }, new { @class = "form-control", @id = "Item_Type" })
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group">
                            <div class="form-group">
                               
                            </div>
                        </div>
                    </div>
                </div>
               

                <div class="row">
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label class="control-label" style="font-weight:bold;">Modulos:</label>
                            @if (Model.ListRol != null)
                            {
                                for (int i = 0; i < Model.ListRol.Count; i++)
                                {
                                    <div class="checkbox">                                        
                                        @Html.CheckBoxFor(m => m.ListRol[i].Selected)
                                        @Model.ListRol[i].Nombre
                                        @Html.HiddenFor(m => m.ListRol[i].Id_Modulos)
                                        @*@Html.HiddenFor(m => Model.ListRol[i].Nombre)*@                                        
                                    </div>
                                }
                            }
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group">
                           
                        </div>
                    </div>
                </div>

            </div>
            <input type="hidden" value="@ViewBag.Id" id="id" name="id" />
        </form>
    </div>
    <div class="modal-footer">
        <span id="spnModalConfigInformation" style="color:red;"></span>
        <button type="button" class="btn btn-default" data-dismiss="modal" data-url="@(Url.Action("GetRoles", "SetUp"))" onclick="showRefreshViews(this, '_ViewRoles');">Cerrar</button>
        <button type="button" class="btn btn-primary" id="btnSaveModify" onclick="saveModalConfig(this, 'spnModalConfigInformation');" data-url="@(Url.Action("Add", "SetUp"))">Guardar</button>
    </div>
</div>
</div>
</div>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")"></script>
<script type="text/javascript">
    $().ready(function () {
        // validate the contact form when it is submitted
        $("#AddConfigUpdate").validate({

            rules: {
                Nombre_Rol: { required: true },
                Descripccion: { required: true }
            },
            messages: {
                Nombre_Rol: "* Campo obligatorio",
                Descripccion: "* Campo obligatorio"
            }
        });

    });

</script>


